{
  "name": "documate",
  "version": "0.1.0",
  "description": "AI-powered documentation assistant using GitHub Copilot CLI",
  "type": "module",
  "bin": {
    "documate": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "lint": "eslint src/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "documentation",
    "cli",
    "copilot",
    "typescript",
    "ai"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.11.1",
    "ora": "^9.1.0",
    "python-ast": "^0.1.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.30.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0"
  }
}
